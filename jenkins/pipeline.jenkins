#!groovy
// React galley pipeline
properties([disableConcurrentBuilds()])

pipeline {
    agent {
        label 'master'
    }
    triggers { pollSCM('* * * * *')} // Check for repo update every minute
    options {
        buildDiscarder(logRotator(numToKeepStr: '10', artifactNumToKeepStr: '10'))
        timestamps()
    }

    stages {
        stage('Download SC and install env') {
            steps {
                script {
                    git branch: 'main', credentialsId: 'github_key', url: "git@github.com:NikAvrinsky/ci-cd.git"
                    sh "npm install"
                }
            }
        }
         stage('Build prod from sources') {
            steps {
                script {
                    sh "mkdir build"
                    sh "npm run build"
                }
            }
        }
        stage('Deploy build with Ansible') {
            steps {
                sh 'ansible-playbook ./ansible/playbook.yml -i hosts'
            }
        }
    }
}